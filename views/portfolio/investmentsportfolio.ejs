<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../layouts/head') %>
    <link rel="stylesheet" href="/css/addedstyles.css" />
  </head>
  <body class="hold-transition light-skin sidebar-mini theme-primary fixed">
    <div class="wrapper">
      <!-- <div id="loader"></div> -->

      <header class="main-header">
        <!-- header -->
        <%- include('../layouts/header') %>
      </header>

      <!-- Left side column. contains the logo and sidebar -->
      <aside class="main-sidebar">
        <!-- sidebar-->
        <%- include('../layouts/aside') %>
      </aside>

      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <div class="container-full">
          <!-- Main content -->
          <section class="content">
            <div class="row">
              <h1>The Defensive Portfolio</h1>
              <% portfolios.forEach((portfolio) => { %>

              <div class="col-lg-11">
                <div class="card">
                  <div class="row g-0 align-items-center">
                    <div class="col-md-2">
                      <img
                        src="/portfolio/<%= portfolio.imageName %>"
                        class="card-img h-350"
                        alt="<%= portfolio.imageName %>"
                      />
                    </div>
                    <div class="col-md-7">
                      <div class="card-body">
                        <h1 class="card-title fs-40 fw-500 mb-5">
                          <%= portfolio.title %>
                        </h1>
                        <p
                          class="card-text text-gray-600 mt-20"
                          style="width: 85%"
                        >
                          <%= portfolio.description %>
                        </p>
                        <ul class="card-text text-gray-600 fs-15">
                          <li class="m-2">
                            Variable returns dependant on market performance
                          </li>
                          <li class="m-2">
                            You earn the above percentage every Friday
                          </li>
                          <li class="m-2">Compounding Percentage 16.75%</li>
                        </ul>

                        <div class="col-lg-12">
                          <div class="row">
                            <div
                              class="col-md-4"
                              style="border: 1px solid #d5d5d5"
                            >
                              <h3>Portfolio Duration</h3>

                              <span><%= portfolio.portfolioDuration %></span>
                            </div>
                            <div
                              class="col-md-4"
                              style="border: 1px solid #d5d5d5"
                            >
                              <h3>Return on investment</h3>

                              <span><%= portfolio.returnOnInvestment %></span>
                            </div>
                            <div
                              class="col-md-4"
                              style="border: 1px solid #d5d5d5"
                            >
                              <h3>Minimum Capital</h3>

                              <span><%= portfolio.minimumCapital %></span>
                            </div>
                          </div>
                        </div>
                      </div>
                      <!-- end card-body-->
                    </div>
                    <div class="col-md-1">
                      <img
                        src="/portfolio/chartbasic.png"
                        alt="..."
                        style="max-width: 300px; width: 270px"
                      />
                    </div>
                    <div
                      class="<%= isProfileComplete ? 'port_unlocked' : 'port_locked' %>"
                    >
                      <% if (isProfileComplete) { %>
                      <a href="/portfolio/<%= portfolio._id %>"
                        >View portfolio details</a
                      >
                      <% } else { %>
                      <p>
                        Complete your profile to access portfolio fund details,
                        webinar, fund document, and more
                      </p>
                      <i data-feather="lock" class="locked__class"></i><br />
                      <a href="/user/profile">Complete your profile</a>
                      <% } %>
                    </div>
                    <!-- end col -->
                  </div>
                  <!-- end row-->
                </div>
                <!-- end card-->
              </div>
              <% }) %>
            </div>
            <!-- end row-->
          </section>
          <!-- /.content -->
        </div>
      </div>
      <!-- /.content-wrapper -->

      <footer class="main-footer">
        <!-- footer -->
        <%- include('../layouts/footer') %>
      </footer>

      <!-- Vendor JS -->
      <%- include('../layouts/script') %>
      <script src="/js/bundle.js"></script>
    </div>
  </body>
</html>
